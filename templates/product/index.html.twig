{% extends 'base.html.twig' %}

{% block title %} Product {% endblock %}


{% block body %}
<div class="container col-md-8 text-center mt-3">
<h1 class="text text-primary"> Product List </h1>
{% for message in app.session.flashBag.get("Error") %}
        <p class="alert alert-danger  col-md-3 ">{{ message }} </p>
{% endfor %} 
{% for message in app.session.flashBag.get("Success") %}
        <p class="alert alert-warning  col-md-3 ">{{ message }} </p>
{% endfor %} 


                        <a class="btn btn-success" href="{{ path('product_add') }}">Product Add</a>
                        <br><br>
                        <form class="form-group" action="{{ path('search_product_name') }}" method="post">
        <input class="form-control" type="search" name="keyword" required
        placeholder="Search by product name">
    </form>
    <div class="form-group mt-3 col-md-6">
    <select onchange="window.location.href=this.value" class="form-control">
        <option>Sort by</option>
        <option value="{{ path('sort_product_name_ascending')}}">Name Ascending</option>
        <option value="{{ path('sort_product_name_descending')}}">Name Descending</option>
    </select>
    </div>
    {% if products == null %}
        <h4 class="text text-bg-danger mt-4">product not found !</h4>
    {% else %}

<table class="table table-primary mt-3">
        <thead>
        <tr>
            <th>Product Id</th>
            <th>Product Name</th>
            <th>Product Color</th>
            <th>Product Price</th>
            <th>Product Image</th>
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td scope="row">{{ product.id }}</td>
            <td>
                <a href="{{ path('product_detail', {'id' : product.id })}}">
                    {{ product.name }}
                </a>
             </td>
            <td>{{ product.color }}</td>
            <td>{{product.price}}</td>
            <td>
            <img src="{{asset(product.image)}}" alt="{{product.name}}"
    width="250" height="200">
    </td>
     
            <td>
                <a class="btn btn-warning" href="{{ path('product_edit', {'id' : product.id })}}">
                    EDIT
                </a>
                <a class="btn btn-danger" href="{{ path('product_delete', {'id' : product.id })}}"
                onclick="return confirm('Are you sure to delete this Product ?')";
                >
                    DELETE
                </a>
            </td>
        </tr>
    {% endfor %}    
    </tbody>
</table>
 {% endif %}
</div>
{% endblock %}
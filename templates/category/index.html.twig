{% extends 'base.html.twig' %}

{% block title %} Category {% endblock %}

{% block body %}
<div class="container col-md-6 text-center mt-3">
<h1 class="text text-primary"> Category List </h1>
{% for message in app.session.flashBag.get("Error") %}
        <p class="alert alert-danger  col-md-3 text-center">{{ message }} </p>
{% endfor %} 
{% for message in app.session.flashBag.get("Success") %}
        <p class="alert alert-warning  col-md-3 text-center">{{ message }} </p>
{% endfor %} 
 <a class="btn btn-success" href="{{ path('category_add') }}">Category Add</a>
<table class="table table-primary mt-3">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Category Name</th>
            <th>Category Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categorys %}
        <tr>
            <td scope="row">{{ category.id }}</td>
            <td>
                <a href="{{ path('category_detail', {'id' : category.id })}}">
                    {{ category.name }}
                </a>
             </td>
            <td>{{ category.description }}</td>
            <td>
                <a class="btn btn-warning" href="{{ path('category_edit', {'id' : category.id })}}">
                    EDIT
                </a>
                <a class="btn btn-danger" href="{{ path('category_delete', {'id' : category.id })}}"
                onclick="return confirm('Are you sure to delete this category ?')";
                >
                    DELETE
                </a>
            </td>
        </tr>
    {% endfor %}    
    </tbody>
</table>
</div>
{% endblock %}
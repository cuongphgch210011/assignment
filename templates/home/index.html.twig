{% extends 'base.html.twig' %}

{% block title %} Sneaker Boy {% endblock %}

{% block body %}

<div class="container col-lg-16 text-center" >
  <div class="row">
    <div class="col-sm-2" id="category">
    {% for category in categorys %}
       <ul>
       <li><a href="{{ path('categorysort', {id:category.id}) }}">{{category.name}}</a></li>
       </ul> 
    
     {% endfor %}
    </div>
    
     <div class="container col-lg-10"  >
      <form class="form-group col-md-4" action="{{path('searchByName')}}" method="post">
        <input class="form-control" type="search" name="keyword" required
        placeholder="Search">
    </form>
    <br>
    <div class="row">
    <br>
         {% for product in products %}
            <div class="col-md-4 " >
                <div class="card mb-4" height="450" id="product">
                    <img src="{{asset(product.image)}}" alt="{{ product.name }}" class="card-img-top" width="200" height="334">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.name }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('product_detail', {id: product.id}) }}" class="btn btn-warning">View details</a>
                            <span class="h5 mt-auto">{{ product.price }} â‚¬</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
    
</div>

{% endblock %}
